#ifndef _KORALI_NEURAL_NETWORK_HPP_
#define _KORALI_NEURAL_NETWORK_HPP_

#include "engine.hpp"
#include "modules/distribution/univariate/uniform/uniform.hpp"
#include "modules/experiment/experiment.hpp"
#include "modules/layer/layer.hpp"
#include "modules/module.hpp"
#include "modules/solver/solver.hpp"

#ifdef _KORALI_USE_ONEDNN
  #include "dnnl.hpp"
#endif

namespace korali
{
class NeuralNetwork : public Module
{
  public:
#ifdef _KORALI_USE_ONEDNN
  /**
   * @brief oneDNN Engine
   */
  dnnl::engine _engine;

  /**
   * @brief oneDNN Stream to run operations
   */
  dnnl::stream _stream;

  /**
   * @brief Flag to make sure the NN is initialized before creating
   */
  bool _isInitialized;

  /**
   * @brief Number of NN hyperparameters (weights/bias/normalization shift/scale)
   */
  size_t _hyperparameterCount;

  /**
   * @brief Number of normalization parameters (mean/variance)
   */
  size_t _normalizationParameterCount;

#endif

  void initialize() override;

  /**
   * @brief Initializes the internal memory structures for the forward pipeline
   * @param batchSize The size of the input batch for which the NN has to be created
   */
  void createForwardPipeline();

  /**
  * @brief Initializes the internal memory structures for the backward pipeline
  */
  void createBackwardPipeline();

  /**
   * @brief Updates the internal values of the NN inputs
   * @param input The input batch
   */
  void setInput(const std::vector<std::vector<double>> &input);

  /**
   * @brief Updates the values of weights, biases, and normalization scale/shift configuration to the NN
   * @param hyperparameters The input hyperparameters
   */
  void setHyperparameters(const std::vector<double>& hyperparameters);

  /**
   * @brief Gets the values of weights, biases, and normalization scale/shift configuration to the NN
   * @return The hyperparameters of the NN
   */
  std::vector<double> getHyperparameters();

  /**
   * @brief Gets the values of normalization mean variance
   * @return The input normalization parameters
   */
  std::vector<double> getNormalizationParameters();

 /**
  * @brief Updates the values of normalization mean variance
  * @param normalizationParameters The input normalization parameters
  */
  void setNormalizationParameters(const std::vector<double> &normalizationParameters);

  /**
   * @brief Forward-propagates the input batch data through the network.
  */
  void forward();

  /**
  * @brief Runs the backward propagation procedure and returns the gradients of the hyperparameters (weights,bias/normalization) with respect to the output
  * @param outputDiffs Output differentials
  * @return The calculated gradients
  */
  std::vector<double> getHyperparameterGradients(const std::vector<double> &outputDifferential);

  /**
   * @brief Backward-propagates to find out the gradients of the input data.
   * @param outputDifferential The differential of the output wrt the solution
  */
  void backwardData(std::vector<float> &outputDifferential);

  /**
   * @brief Creator that sets initialized flag to false
   */
  NeuralNetwork();
};

} // namespace korali

#endif // _KORALI_SOLVER_NEURAL_NETWORK_HPP_
