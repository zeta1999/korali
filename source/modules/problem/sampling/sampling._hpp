#ifndef _KORALI_PROBLEM_SAMPLING_HPP_
#define _KORALI_PROBLEM_SAMPLING_HPP_

#include "modules/problem/problem.hpp"

namespace korali
{
namespace problem
{
class Sampling : public korali::Problem
{
  private:
  public:
  void initialize() override;

  /**
   * @brief Evaluates the logarithm of probability density (logP(x)) of the function at the given parameters.
   * @param sample Sample to evaluate
   */
  virtual void evaluate(korali::Sample &sample);
  
  /**
   * @brief Evaluates the gradient of logarithm probability density (grad(logP(x))) of the function at the given parameters.
   * @param sample Sample to evaluate
   */
  virtual void evaluateGradient(korali::Sample &sample);
};

} // namespace problem
} // namespace korali

#endif // _KORALI_PROBLEM_SAMPLING_HPP_
