   {
    "Name": [ "Use NUTS" ],
    "Type": "bool",
    "Description": "Specifies if No-U-Turn Sampler (NUTS) is used."
   },
   {
    "Name": [ "Step Size" ],
    "Type": "double",
    "Description": "Step size used in Leapfrog scheme."
   },
   {
